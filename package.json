{
	"name": "luacheck-browserify",
	"version": "0.9.0",
	"description": "Luacheck in browser",
	"keywords": [
		"luacheck",
		"lint",
		"linter",
		"browser"
	],
	"homepage": "https://github.com/bhsd-harry/luacheck-browserify#readme",
	"bugs": {
		"url": "https://github.com/bhsd-harry/luacheck-browserify/issues"
	},
	"license": "MIT",
	"files": [
		"dist/*.min.js",
		"dist/*.map",
		"dist/*.d.ts"
	],
	"main": "dist/index.min.js",
	"browser": "dist/index.min.js",
	"types": "dist/wasm.d.ts",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bhsd-harry/luacheck-browserify.git"
	},
	"scripts": {
		"lint:ts": "tsc --noEmit && eslint --cache .",
		"lint": "npm run lint:ts",
		"build": "cd src; node ./bundle.js && cd .. && tsc && node build.js && eslint --no-config-lookup -c eslint.dist.mjs dist/*.min.js",
		"test:main": "mocha --require dist/index.min.js",
		"test:es8": "mocha --require dist/es8.min.js",
		"test": "npm run test:main && npm run test:es8"
	},
	"devDependencies": {
		"@bhsd/code-standard": "^1.3.0",
		"@stylistic/eslint-plugin": "^5.5.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.9.2",
		"@typescript-eslint/eslint-plugin": "^8.46.2",
		"@typescript-eslint/parser": "^8.46.2",
		"esbuild": "^0.25.11",
		"eslint": "^9.38.0",
		"eslint-plugin-es-x": "^9.1.2",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-jsdoc": "^61.1.11",
		"eslint-plugin-jsonc": "^2.21.0",
		"eslint-plugin-n": "^17.23.1",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-regexp": "^2.10.0",
		"eslint-plugin-unicorn": "^62.0.0",
		"globals": "^16.5.0",
		"luabundle": "^1.7.0",
		"luamin": "^1.0.4",
		"mocha": "^11.7.4",
		"typescript": "^5.7.3",
		"wasmoon": "^1.16.0"
	},
	"engines": {
		"node": ">=20.19.5"
	}
}
